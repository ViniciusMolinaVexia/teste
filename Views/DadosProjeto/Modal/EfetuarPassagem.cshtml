@model Gafisa.AlphaBook.Models.Home.EfetuarPassagemModel
<div class="seg-modal">
    <div class="modal-header">
        <a href="javascript:void(0);" class="close fechar">x</a>
        <h3>
            Efetuar passagem</h3>
    </div>
    <div class="modal-body">
        <form class="forms" id="formPassagem">
        <fieldset>
            <div class="sep-line-form">
                <div class="form-line modal-passagem-departamento">
                    <label>
                        *Departamento:</label>
                    @Html.DropDownListFor(model => model.IdDepartamento, Model.Departamentos, "Selecione", new { id = "departamentos" })
                </div>
            </div>
            <div class="sep-line-form">
                <div class="form-line modal-passagem-pendencias">
                    <label>
                        Pendências:</label>
                    <textarea name="Pendencias" maxlength="255"></textarea>
                </div>
            </div>
            <div class="sep-line-form modal-passagem-consideracoes">
                <label>
                    Considerações Gerais:</label>
                <textarea name="Consideracoes" maxlength="255"></textarea>
            </div>
        </fieldset>
        </form>
    </div>
    <div class="modal-footer">
        <a class="bt-padrao" href="javascript:void(0);" id="botaoSalvarPassagem">Salvar</a>
    </div>
</div>
