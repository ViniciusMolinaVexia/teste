@model IEnumerable<Gafisa.AlphaBook.Dominio.Produto>

@if (Model.IsNullOrEmptyCollection())
{
<p class="msg-sem-retorno">@String.Format(Gafisa.AlphaBook.Dominio.Mensagens.Comum.NaoHaNenhumaInformacaoSobre, "Produto")</p>
}
else
{
    foreach (var item in Model)
    {
<tr data-id="@item.Id">
    <td class="col-1">@item.Nome</td>
	<td class="col-2">
    @if (Gafisa.AlphaBook.Componentes.Permissao.Permissao.UsuarioPossuiPermissao(ViewData, Secao.Administracao, Funcionalidade.Produto, Acao.EditarProprios))
    {
        <a class="ic-editar" href="@Url.Action("EditarProduto", "Admin", new { id = item.Id })">Editar</a>
    }
    </td>
    <td class="col-3">
    @if (Gafisa.AlphaBook.Componentes.Permissao.Permissao.UsuarioPossuiPermissao(ViewData, Secao.Administracao, Funcionalidade.Produto, Acao.RemoverProprios))
    {
        <a class="ic-excluir" data-id="@item.Id" href="javascript:void(0);">Excluir</a>
    }
    </td>
</tr>
    }
}