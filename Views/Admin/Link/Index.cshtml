@model Gafisa.AlphaBook.Models.Admin.StatusProtocoloModel 

@{
    ViewBag.Title = "AlphaBook - Administração";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section scripts {
    <script type="text/javascript" src="@Url.Content("~/Scripts/Admin/Link/link-pesquisa.js")"></script>
}

@section css {
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Admin/link.css")" />
}

<h2>
    Manutenção de Links</h2>

<div id="filtros">
    <div class="div-filtro">
        <h4>Filtro</h4>
        <div class="div-busca-filtro">
            <input type="text" watermark="Busca" class="watermark-font" id="termo" name="termo" value="" maxlength="255" />
        </div>
        <a id="buscar" class="bt-padrao-filtro" href="javascript:void(0)">Buscar</a>
    </div>
</div>
@if (Gafisa.AlphaBook.Componentes.Permissao.Permissao.UsuarioPossuiPermissao(ViewData, Secao.Administracao, Funcionalidade.Links, Acao.Adicionar))
{
    <div class="div-acoes">
	    <a id="incluir" class="bt-adicionar" href="@Url.Action("EditarLink", "Admin")">Adicionar novo Link</a>
    </div>
}
<div class="div-listar">
    <div class="box-tabela">
        <div class="wrap table2">
            <div class="inner">
                <table id="tabela">
                    <thead>
                        <tr>
                            <th class="table-title table-left colun-1 table-title-ord-down">
                                <a href="javascript:void(0);" data-ordenacao="1" data-tipo="1">Id</a>
                            </th>
                            <th class="table-title table-left colun-2 table-title-ord-down">
                                <a href="javascript:void(0);" data-ordenacao="2" data-tipo="1">Tooltip</a>
                            </th>
                            <th class="table-title table-left colun-3 table-title-ord-down">
                                <a href="javascript:void(0);" data-ordenacao="3" data-tipo="1">URL</a>
                            </th>
                            <th class="table-title colun-4">
                                Icone
                            </th>
                            <th class="table-title colun-5">
                                Cor
                            </th>
                            <th class="table-title table-left colun-6 table-title-ord-down">
                                <a href="javascript:void(0);" data-ordenacao="4" data-tipo="1">Alterado Por</a>
                            </th>
                            <th class="table-title table-left colun-7 table-title-ord-down">
                                <a href="javascript:void(0);" data-ordenacao="5" data-tipo="1">Alterado Em</a>
                            </th>
                            <th class="table-title table-left colun-8 table-title-ord-down">
                                <a href="javascript:void(0);" data-ordenacao="6" data-tipo="1">Ordem</a>
                            </th>
                            <th class="table-title colun-9">
                                Editar
                            </th>
                            <th class="table-title colun-10">
                                Excluir
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
