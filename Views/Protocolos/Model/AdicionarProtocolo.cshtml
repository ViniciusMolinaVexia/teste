@model Gafisa.AlphaBook.Models.Home.ProtocoloModel

@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/Home/associarProjeto.js")"></script>
} 

<div class="modal-header">
    <a style="" id="fecharSelecaoContato" href="javascript:void(0);" class="close fechar">x</a>
    <h2 id="">Adicionar protocolo</h2>
</div>
<div class="adicionarProtocolo" id="adicionarProtocolo">
    <div class="col-left">
        <div class="forms">

            <div class="sep-line-form">
                <div class="form-line form-status">
                    <label>Associar a processo existente:</label>
                    @Html.DropDownListFor(model => model.ProtocoloPaiId, Model.Protocolos.ToSelectList(x => x.NumeroProtocolo, x => x.Id), "Selecione", new { id = "ProtocoloPaiId"})
                </div>
            </div>

            <div class="sep-line-form">
                <div class="form-line form-protocolo">
                    <label>* Nº Protocolo:</label> 
                    <input type="text" value="" name="NumeroProtocolo" id="NumeroProtocolo" />
                </div>
                <div class="form-line form-data">
                    <label>* Data Abertura:</label>
                    <input type="text" value="" name="" id="DataAbertura" />
                </div>
            </div>

            <div class="sep-line-form">
                <div class="form-line form-orgao">
                    <label>* Órgão:</label>
                    <input type="text" value="" name="" id="Orgao" />
                </div>
            </div>

            <div class="sep-line-form">
                <div class="form-line form-status">
                    <label>* Status:</label>
                    @Html.DropDownListFor(model => model.StatusProtocoloId, Model.ListaStatus, "Selecione", new { id = "StatusProtocolo"})
                </div>
            </div>

            <div class="sep-line-form">
                <div class="form-line form-requerente">
                    <label>Requerente:</label>
                    <input type="text" value="" name="" id="Requerente" />
                </div>
            </div>

            <div class="sep-line-form">
                <div class="form-line form-observacoes">
                    <label>Observação:</label>
                    <textarea rows="2" name="Observacao" id="Observacao" cols="20"></textarea>
                </div>
            </div>
            
        </div>
    </div>

    <div class="col-right">
        <div class="forms">
            @Html.Partial("~/Views/Postagem/PostPadrao.cshtml", Model.Postagem)
        </div>
        <div id="divBtnSalvarProtocolo">
            <a href="javascript:void(0);" class="bt-padrao" id="incluirProtocolo">Salvar</a>
        </div>
    </div>
</div>